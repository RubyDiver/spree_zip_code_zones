<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:zip_codes) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_zip_code), new_object_url, :icon => 'icon-plus', :id => 'admin_new_zip_code_link' %>
  </li>
<% end %>

<% if @zip_codes.any? %>
  <table class="index" id="listing_zip_codes">
    <colgroup>
      <col style="width: 85%" />
      <col style="width: 15%" />
    </colgroup>
    <thead>
      <tr data-hook="admin_zip_codes_index_headers">
        <th><%= Spree.t(:name) %></th>
        <th data-hook="admin_zip_codes_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @zip_codes.each do |zip_code| %>
        <tr id="<%= dom_id zip_code %>">
        <tr id="<%= spree_dom_id zip_code %>" data-hook="admin_zip_codes_index_rows" class="<%= cycle('odd', 'even') %>">
          <td><%= zip_code.name %></td>
          <td data-hook="admin_zip_codes_index_row_actions" class="actions">
            <%=link_to_edit zip_code, :no_text => true %>
            <%=link_to_delete zip_code, :no_text => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
   <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:zip_codes, scope: 'spree')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_zip_code_path %>!
  </div>
<% end %>
